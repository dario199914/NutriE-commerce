
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutLogin.cshtml";
}

<h1>Ingreso al Sistema</h1>
<div >
    <img src="~/Perro.png"  width="120" height="120"/>
</div>
<div class="w3ls-login box box--big">
    <!-- form starts here -->
    <form action="@Url.Content("~/Acceso/Login")" method="post">
        <div class="agile-field-txt">
            <label><i class="fa fa-user" aria-hidden="true"></i> Usuario </label>
            <input type="text" name="User" placeholder="Ingrese su Usuario" required />
        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> Contraseña </label>
            <input type="password" name="Pass" placeholder="Ingrese su Contraseña" required id="myInput" />
            <div class="agile_label">
                <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                <label class="check" for="check3">Mostrar Contraseña</label>
            </div>
            <div class="agile-right">
                <a href="#">¿Olvido su contraseña?</a>
            </div>
        </div>
        <!-- script for show password -->
        <script>
				function myFunction() {
					var x = document.getElementById("myInput");
					if (x.type === "password") {
						x.type = "text";
					} else {
						x.type = "password";
					}
				}
        </script>
        <!-- //end script -->
        <input type="submit" value="Ingresar">
    </form>
</div>
<!-- //form ends here -->
