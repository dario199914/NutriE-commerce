@model NutriE_commerce.Models.tblCategoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style type="text/css">
        a.my-class {
            color: white
        }

            a.my-class:active {
                color: white
            }

            a.my-class:link {
                color: white
            }

            a.my-class:visited {
                color: white
            }
    </style>
</head>
<body>
    <div >
        <center><h1 style="color:white" >Eliminar Categoría </h1></center>
        <hr />

        <h3 style="color:white">¿Estás seguro de que quieres eliminar este elemento?</h3>
        <br />
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">
                    <thead>
                        <tr>
                            <th class="text-center"> Nombre </th>
                            <th class="text-center"> Descripción </th>
                            <th class="text-center"> Estado </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>

                            <td class="text-center">
                                @Html.DisplayFor(model => model.catNombre)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(model => model.catDesc)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(model => model.catEstado)
                            </td>


                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align:right">
            <input type="submit" value="Eliminar " class="btn btn-primary" />
            <button type="button"  class="btn btn-primary"> @Html.ActionLink("Ir a Categoria", "Index", null, new { @class = "my-class" })</button>

        </div>
    }

</body>
</html>
