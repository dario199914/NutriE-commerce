@model IEnumerable<NutriE_commerce.Models.tblCategoria>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        a.my-class {
            color: white
        }

            a.my-class:active {
                color: white
            }

            a.my-class:link {
                color: white
            }

            a.my-class:visited {
                color: white
            }
    </style>
</head>
<body style="padding:0%">
   
    <div class="container">
       
        <center><h1 style="color:white"><i>Listado de Categorías </i></h1></center>
        <hr />
       
        <p>
            <div class="btn-group">
                <button type="submit" name="add_product" class="btn btn-primary" aria-current="page"> @Html.ActionLink("Agregar Categoria", "Create", null, new { @class = "my-class" }) </button>
            </div>
        </p>
        <br />
        <div class="panel panel-default">

            <div class="panel-body">
                <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">

                    <thead>
                        <tr>

                            <th class="text-center"> Nombre </th>
                            <th class="text-center"> Descripción </th>
                            <th class="text-center"> Estado </th>
                            <th class="text-center"> Acciones </th>


                        </tr>
                    </thead>
                    <tbody style="text-align:center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.catNombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.catDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.catEstado)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.catId }) |
                                    @Html.ActionLink("Detalle", "Details", new { id = item.catId }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.catId })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
 

</body>
</html>
