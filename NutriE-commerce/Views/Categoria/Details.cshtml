@model NutriE_commerce.Models.tblCategoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style type="text/css">
        a.my-class {
            color: white
        }

            a.my-class:active {
                color: white
            }

            a.my-class:link {
                color: white
            }

            a.my-class:visited {
                color: white
            }
    </style>
</head>
<body>

    <center><h1 style="color:white">Detalle de la Categoría </h1></center>
    <hr />
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">
                <thead>
                    <tr>
                        <th class="text-center"> Nombre </th>
                        <th class="text-center"> Descripción </th>
                        <th class="text-center"> Estado </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>

                        <td class="text-center">
                            @Html.DisplayFor(model => model.catNombre)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.catDesc)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.catEstado)
                        </td>


                    </tr>

                </tbody>
            </table>
        </div>
    </div>
    <div>

        <br />
        <p style="text-align:right">
            <button type="button" class="btn btn-primary">@Html.ActionLink("Editar", "Edit", new { id = Model.catId }, new { @class = "my-class" })</button>
            <button type="button" class="btn btn-primary"> @Html.ActionLink("Ir a Categoria", "Index", null, new { @class = "my-class" })</button>
           
            <!-- <button class="btn btn-primary" type="submit">Button</button>-->
        </p>

    </div>

</body>

</html>
