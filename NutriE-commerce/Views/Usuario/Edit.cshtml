@model NutriE_commerce.Models.tblUsuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style type="text/css">
        a.my-class {
            color: white
        }

            a.my-class:active {
                color: white
            }

            a.my-class:link {
                color: white
            }

            a.my-class:visited {
                color: white
            }
    </style>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div style="color:white">
            <center><h1>Editar Usuario </h1></center>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.usuId)
            <div class="row">
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Rol</label>
                    @Html.DropDownList("rolId", null, htmlAttributes: new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.rolId, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Nombre</label>
                    @Html.EditorFor(model => model.usuNombre, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.usuNombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Cédula</label>
                    @Html.EditorFor(model => model.usuCedula, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.usuCedula, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Teléfono</label>
                    @Html.EditorFor(model => model.usuTelefono, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.usuTelefono, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Correo</label>
                    @Html.EditorFor(model => model.usuCorreo, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.usuCorreo, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Contraseña</label>
                    @Html.EditorFor(model => model.usuContra, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.usuContra, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <label for="inputPassword4" class="form-label">Estado</label>
                    @Html.EditorFor(model => model.usuEstado, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.usuEstado, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <center>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                    </div>
                    <br />
                </div>
            </center>
        </div>
    }
    <br />
    <center>
        <div class="container">
            <button type="button" class="btn btn-primary"> @Html.ActionLink("Ir a Usuarios", "Index", null, new { @class = "my-class" })</button>
           
        </div>
    </center>

</body>
</html>
