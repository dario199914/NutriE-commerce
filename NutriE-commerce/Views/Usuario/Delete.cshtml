@model NutriE_commerce.Models.tblUsuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style type="text/css">
        a.my-class {
            color: white
        }

            a.my-class:active {
                color: white
            }

            a.my-class:link {
                color: white
            }

            a.my-class:visited {
                color: white
            }
    </style>
</head>
<body >


    <center style="color:white"><h1>Eliminar Usuario </h1></center>
    <hr />


    <h3 style="color:white">¿Estás seguro de que quieres eliminar este elemento?</h3>
    <br />
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">
                <thead>
                    <tr>
                        <th class="text-center"> Nombre </th>
                        <th class="text-center"> Cédula </th>
                        <th class="text-center"> Teléfono </th>
                        <th class="text-center"> Correo </th>
                        <th class="text-center"> Contraseña </th>
                        <th class="text-center"> Estado </th>
                        <th class="text-center"> Rol</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.usuNombre)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.usuCedula)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.usuTelefono)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.usuCorreo)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.usuContra)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.usuEstado)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.tblRol.rolNombre)
                        </td>
                    </tr>

                </tbody>

            </table>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color" style="text-align:right">

                    <input type="submit" value="Eliminar Usuario" class="btn btn-primary" />

                    <button type="button" class="btn btn-primary"> @Html.ActionLink("Ir a Usuarios", "Index", null, new { @class = "my-class" })</button>
                </div>
            }
        </div>

    </div>
   
</body>
</html>
