@model IEnumerable<NutriE_commerce.Models.tblUsuario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        a.my-class {
            color: white
        }

            a.my-class:active {
                color: white
            }

            a.my-class:link {
                color: white
            }

            a.my-class:visited {
                color: white
            }
    </style>
</head>
<body>
    <div class="container">

        <center><h1 style="color:white"><i>Listado de Usuarios</i></h1></center>
        <hr />


        <p>
            <div class="btn-group">
                <button type="submit" name="add_product" class="btn btn-primary" aria-current="page">  @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "my-class" })</button>
            </div>
        </p>
        <br />

        <div class="panel panel-default">

            <div class="panel-body">
                <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">
                    <thead>
                        <tr>
                            <th class="text-center"> Nombre </th>
                            <th class="text-center"> Cédula </th>
                            <th class="text-center"> Teléfono </th>
                            <th class="text-center"> Correo </th>
                            <th class="text-center"> Contraseña </th>
                            <th class="text-center"> Estado </th>
                            <th class="text-center"> Rol</th>
                            <th class="text-center"> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuNombre)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuCedula)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuTelefono)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuCorreo)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuContra)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuEstado)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.tblRol.rolNombre)
                                </td>

                                <td class="text-center">
                                    @Html.ActionLink("Editar", "Edit", new { id = item.usuId }) |
                                    @Html.ActionLink("Detalle", "Details", new { id = item.usuId }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.usuId })
                                </td>
                            </tr>

                        }
                    </tbody>






                </table>
            </div>
        </div>
    </div>
</body>
</html>
