@model NutriE_commerce.Models.tblProducto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style type="text/css">
        a.my-class {
            color: white
        }

            a.my-class:active {
                color: white
            }

            a.my-class:link {
                color: white
            }

            a.my-class:visited {
                color: white
            }
    </style>
</head>
<body>


    <div class="container">

        <center><h1 style="color:white"><i>Listado de Productos </i></h1></center>
        <hr />

        <p>
            <div class="btn-group">
                <button type="submit" name="add_product" class="btn btn-primary" aria-current="page">  @Html.ActionLink("Agregar Productos ", "Create", null, new { @class = "my-class" })</button>
            </div>
        </p>
        <br />
        <div class="panel panel-default">

            <div class="panel-body">
                <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">

                    <thead>
                        <tr>

                            <th class="text-center"> Código </th>
                            <th class="text-center"> Nombre </th>
                            <th class="text-center"> Cantidad </th>
                            <th class="text-center"> Descripción </th>
                            <th class="text-center"> Precio </th>
                            <th class="text-center"> Observación </th>
                            <th class="text-center"> Imagen </th>
                            <th class="text-center"> Categoría </th>



                        </tr>
                    </thead>
                    <tbody style="text-align:center">

                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.proCodigo)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proNombre)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proStock)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proDesc)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proPrecio)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proObser)
                            </td>
                            <td>
                                <img src="@Url.Action("getImagen", new { id = Model.proId})" style="width:100px; height:150px;max-width:100%;height:auto;" />

                            </td>
                            <td>
                                @Html.DisplayFor(model => model.tblCategoria.catNombre)
                            </td>

                        </tr>

                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <div>

        <br />
        <p style="text-align:right">
            <button type="button" class="btn btn-primary">@Html.ActionLink("Editar", "Edit", new { id = Model.proId },new { @class = "my-class" })</button>
            <button type="button" class="btn btn-primary"> @Html.ActionLink("Ir a Producto", "Index", null, new { @class = "my-class" })</button>

            <!-- <button class="btn btn-primary" type="submit">Button</button>-->
        </p>

    </div>
</body>
</html>