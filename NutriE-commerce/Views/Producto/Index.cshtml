@model IEnumerable<NutriE_commerce.Models.tblProducto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        a.my-class {
            color: white
        }

            a.my-class:active {
                color: white
            }

            a.my-class:link {
                color: white
            }

            a.my-class:visited {
                color: white
            }
    </style>
</head>
<body style="padding:0%">
    
    <div class="container">

        <center><h1 style="color:white"><i>Listado de Productos </i></h1></center>
        <hr />

        <p>
            <div class="btn-group">
                <button type="submit" name="add_product" class="btn btn-primary" aria-current="page">  @Html.ActionLink("Crear nuevo Producto", "Create", null, new { @class = "my-class" })</button>
            </div>
            <div class="btn-group pull-right">
                <button type="submit" name="report_product" class="btn btn-primary" aria-current="page"> @Html.ActionLink("Reporte Producto", "Print", null, new { @class = "my-class" })</button>
            </div>
        </p>
        <br />
        <div class="panel panel-default">

            <div class="panel-body">
                <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">

                    <thead>
                        <tr>

                            <th class="text-center"> Código </th>
                            <th class="text-center"> Nombre </th>
                            <th class="text-center"> Cantidad </th>
                            <th class="text-center"> Descripción </th>
                            <th class="text-center"> Precio </th>
                            <th class="text-center"> Observación </th>
                            <th class="text-center"> Imagen </th>
                            <th class="text-center"> Categoría </th>
                            <th class="text-center"> Acciones </th>


                        </tr>
                    </thead>
                    <tbody style="text-align:center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.proCodigo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.proNombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.proStock)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.proDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.proPrecio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.proObser)
                                </td>
                                <td>
                                    <img src="@Url.Action("getImagen", new { id = item.proId})" style="width:100px; height:150px;max-width:100%;height:auto;" />

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblCategoria.catNombre)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.proId }) |
                                    @Html.ActionLink("Detalle", "Details", new { id = item.proId }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.proId })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    
</body>
</html>