@model NutriE_commerce.Models.tblProducto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style type="text/css">
        a.my-class {
            color: white
        }

            a.my-class:active {
                color: white
            }

            a.my-class:link {
                color: white
            }

            a.my-class:visited {
                color: white
            }
    </style>
</head>
<body>

    <div class="container">

        <center><h1 style="color:white"><i>Eliminar Producto </i></h1></center>
        <hr />
        <h3 style="color:white">¿Estás segura de que quieres eliminar este elemento?</h3>
        <br />
        <div class="panel panel-default">

            <div class="panel-body">
                <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">

                    <thead>
                        <tr>

                            <th class="text-center"> Codigo </th>
                            <th class="text-center"> Nombre </th>
                            <th class="text-center"> Cantidad </th>
                            <th class="text-center"> Descripción </th>
                            <th class="text-center"> Precio </th>
                            <th class="text-center"> Observación </th>
                            <th class="text-center"> Imagen </th>
                            <th class="text-center"> Categoria </th>



                        </tr>
                    </thead>
                    <tbody style="text-align:center">

                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.proCodigo)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proNombre)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proStock)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proDesc)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proPrecio)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.proObser)
                            </td>
                            <td>
                                <img src="@Url.Action("getImagen", new { id = Model.proId})" style="width:100px; height:150px;max-width:100%;height:auto;" />

                            </td>
                            <td>
                                @Html.DisplayFor(model => model.tblCategoria.catNombre)
                            </td>

                        </tr>

                    </tbody>

                </table>
            </div>
        </div>
    </div>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align:right">
            <input type="submit" value="Eliminar " class="btn btn-primary" />
            <button type="button" class="btn btn-primary"> @Html.ActionLink("Ir a Productos", "Index", null, new { @class = "my-class" })</button>

        </div>
    }
</body>
</html>